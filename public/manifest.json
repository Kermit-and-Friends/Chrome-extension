{
  "manifest_version": 3,
  "name": "hAIndle",
  "background": {
    "service_worker": "./background.js"
  },
  "action": {
    "default_popup": "./index.html"
  },
  "permissions": [
    "tabs",
    "tabCapture",
    "activeTab",
    "desktopCapture"
  ],
  "version": "1.0.0",
  "host_permissions": ["<all_urls>"]
}