{
  "manifest_version": 3,
  "name": "hAIndle",
  "action": {
    "default_icon": {
      "128": "icon-128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "tabs",
    "tabCapture",
    "activeTab",
    "desktopCapture",
    "scripting",
    "contextMenus"
  ],

  "version": "1.0.0",
  "host_permissions": ["<all_urls>"]
}